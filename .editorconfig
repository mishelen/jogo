# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
# Set default charset
charset = utf-8

# 4 space indentation
[*.{js,scss,css}]
indent_style = space
indent_size = 4

# Matches the exact files
[{*.json,.travis.yml,.babelrc,.eslintrc,.stylelintrc,.prettierrc}]
indent_style = space
indent_size = 2

[*.{md,pug,jade}]
trim_trailing_whitespace = false
